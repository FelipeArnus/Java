package br.com.fiap;
import java.util.Scanner;

public class EX1 {

	public static void main(String[] args) {
		int p1, p2, p3,p4;
		Scanner scan;
		
		try {
			scan = new Scanner(System.in);//instanciando input
			
			System.out.println("DigitAi: ");
			p1 = scan.nextInt();
			System.out.println("Digite prox prova: ");
			p2 = scan.nextInt();
			System.out.println("Penultima prova: ");
			p3 = scan.nextInt();
			System.out.println("Ultima prova: ");
			p4 = scan.nextInt();
			
			System.out.println((p1 + p2 + p3+p4)/4);
			
		} catch (Exception e) {
			// TODO: handle exception
		}
	}

}
